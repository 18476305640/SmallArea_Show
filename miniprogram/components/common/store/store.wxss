/*商品展示*/
.showGoods {
      width: 100%;
      height: 90rpx;
      margin-top: 20rpx;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex: 1;
}

.showGoods_item {
      width: 33%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-content: center; 
      
}
.showGoods_item>view {
    width: 95%;
    margin: 0px auto;
    height: 110rpx;
}
.showGoods_item>text {
    width: 100%;
    font-size: 21rpx;
    text-align: center;

    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;

}
.showGoods_item>text:nth-of-type(2) {
    color: #FB544B;
    font-size: 27rpx;
    font-weight: 700;

}

