.store  {
    width: 730rpx;
    margin: 0rpx auto;

    display: flex;
    flex-wrap:nowrap;
    justify-content: flex-start;
    align-items: flex-start; 

    box-sizing: border-box;
    padding: 20rpx 10rpx;
    border-bottom: 1px solid #EFEFEF;

}
.icon {
  width: 200rpx;
  height: 160rpx;
  border: 1px solid  #F9D452;
  border-radius: 15rpx;
  overflow: hidden;
  position: relative;
}
.icon>text {
    position: absolute;
    left: 0px;
    top: 0px;
    font-size: 26rpx;
    line-height: 35rpx;
    border-radius: 0rpx 0px  8rpx 0rpx ;
    padding: 0px 10rpx;
    background: #FFA60B;
    color: #FFFFFF;

}
.icon>image {
    display: block;
    width: 100%;
    height: 100%;
}


.content {
    height: 80%;
    width: 500rpx;
    box-sizing: border-box;
    padding: 0rpx 10rpx 0rpx 20rpx;
    display: flex;
    
    flex-direction: column;
    justify-items: flex-start;
    align-content: space-between;

  
}
