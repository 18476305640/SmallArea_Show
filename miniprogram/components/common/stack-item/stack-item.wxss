/* components/stack-item/stack-item.wxss */
.img_parent {
   width: 110rpx;
   height: 110rpx;
   position: relative;
   margin: 10rpx 30rpx 0px 0px;
}
.img_parent>view:nth-child(1) {
    position: absolute;
    right: -20rpx;
    top: 0px;
    font-size: 25rpx;
    color: red;
    font-weight: 700;

}
.img_parent>view:nth-child(2), image {
   width: 50rpx;
   height: 50rpx;
   margin: 10rpx auto;
}
.img_parent>view:nth-child(3) {
   text-align: center;
   font-size: 25rpx;
   line-height: 40rpx;
}