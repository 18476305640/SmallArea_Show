/* components/stack/stack.wxss */
.box {
   display: flex;
   flex: 1;
   background: #ffffff;
   box-sizing: border-box;
   padding: 10rpx 20rpx;
}
.container {
    display: flex;
    flex-wrap: wrap;
    justify-content:flex-start;
    align-items: flex-start;
    
}
.type-name {
  font-weight: 700;
  width: 40rpx;
  background: #F9D452;
  color: #ffffff;
  box-sizing: border-box;
  padding: 0px 3rpx;
   font-size: 23rpx;
   text-align: center;
   margin: 10rpx 15rpx;
   writing-mode: vertical-lr;/*从左向右 从右向左是 writing-mode: vertical-rl;*/  
}