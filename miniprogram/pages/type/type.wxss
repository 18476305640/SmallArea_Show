/* pages/type/type.wxss */
.type  {
    width: 750rpx;
    position: absolute;
    left: 0px;
    top: 0px;
    height: 100vh;
    
    background: #F5F5F5;
}
.typeLeft {
    width: 28vw;
    height: 100vh;
    background: #ffffff;
    
}
.typeLeft>view {
     width: 100%;
     line-height: 100rpx;
     font-size: 30rpx;
      text-align: center;
}
.active {

    background: #F5F5F5;
    position: relative;
    color: #F9D452;
    font-weight: 700;
}
.active::before {
    content: '';
    display: inline-block;
    width: 7rpx;
    position: absolute;
    left: 0px;
    top: 0px;
    height: 100%;
    background: #F9D452;
}
.typeRight {
      position: absolute;
      right: 0px;
      top: 0px;
      height: 100vh;
     width: 69vw;
     float: right;
     display: flex;
     align-items: center;
     justify-items: center;
}
.typeRight>view {
     width: 98%;
     height: 98vh;
     float: right;
     background: #ffffff;
     overflow: auto;

     display: flex;
     flex-wrap: wrap;
     justify-content: space-between;
     align-content: flex-start;

}

.type-content {
      width: 48%;
      height: 200rpx;
      margin: 0rpx 0rpx 20rpx;
      box-shadow: 0px 0px 10rpx rgb(161, 157, 157);
      border-radius: 10rpx;

      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-content: space-around;

}
.type-content>text {
    font-size: 30rpx;
}
.image-box {
    display: block;
    width: 90%;
    margin-top: 10rpx;
     border-radius: 10rpx;
    height: calc( 100% - 50rpx );
    overflow: hidden;
}
.image-box>image {
    display: block;
    width: 100%;
    height: 100%;
}
