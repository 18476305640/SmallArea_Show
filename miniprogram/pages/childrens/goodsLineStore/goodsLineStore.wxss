
.search {
     position: absolute;
     left: 0px;
     top: 0px;
      width: 750rpx;
      height: 90rpx;
      background: #FFFFFF;
      border-bottom:1px solid  #E8E8E8; 
      display: flex;
      justify-content: space-between;
      align-items: center;

}
.search>input {
   display: block;
   width: 600rpx;
   border: 1px solid #F9D452;
   height: 75%;
   border-radius: 15rpx; 
   margin-left: 15rpx; 
   box-sizing: border-box;
   padding-left: 30rpx; 
   
}
.search>input:hover {
  border: 2px solid #F9D452;
  box-shadow: 0px 0px 5px rgb(248, 219, 115);
}
.search>text {
    display: block;
    width: 120rpx;
    text-align: center;

}
/*nav样式*/
.title {
  position: absolute;
  left: 0px;
  top: 90rpx;
   width: 750rpx;
   line-height: 70rpx;
   display: flex;
   flex: 1;
   background: #FFFFFF;

}
.title>view {
    display: block;
    height: 100%;
    width: 50%;
    text-align: center;
}
.active  {
    background: #f5f5f5;
}

/*产品显示*/
.content {
    position: absolute;
    left: 0px;
    top: 180rpx;
    width: 100%;
    height: calc(100vh - 183rpx );
    background: #f5f5f5; 
    box-sizing: border-box;
    
}

.slide {
    display: block;
    width: 95vw;
    height: calc( 100vh - 205rpx);
    margin: 0rpx auto;
    box-sizing: border-box;
    /* overflow: auto; */
}
.slide>navigator {
  width: 100%;
  height: 280rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E8E8E8;

  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
} 
.goodsLeft {
    width: 200rpx;
    height: 230rpx;
    border-radius: 10rpx;
    margin: 0rpx 20rpx;
    overflow: hidden;
}
.goodsLeft>image {
    display: block;
    width: 100%;
    height: 100%;

}
.disable {
     display: none !important;
}
.goodsRight{
    width: 450rpx;
    height: 230rpx;
    font-size: 30rpx; 
}
.goodsRight>text {
    display: block;
}
.describe {
  display: block;
  width: 100%;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.money {
    color: red;
    font-weight: 700;
}
.goods_title {
   font-weight: 700; 
}
