.store_info {
     width: 750rpx;
     height: 110rpx;

     display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0rpx 20rpx;
    background: #FFFFFF;
     
}
.store_info>.cart_store {
    height: 90rpx;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}
.cart_store  image{
    display: inline-block;
    height: 90rpx;
    width: 90rpx;
    margin-right: 10rpx;
  
}
.cart_store>.info {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.carts ,.carts>image {
   display: block;
    width: 50rpx;
    height: 50rpx;
}

/*中间部分*/
.cart {
      width: 750rpx;
      margin-top: 10rpx;

}
.cart checkbox-group {
     width: 90%;
     margin: 10rpx auto;
     
}
.cart .item {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 17rpx 0rpx;
      background: #FFFFFF;
}
.left {
     height: 100%;
     width: 400rpx;
     text-overflow: ellipsis;
     overflow: hidden;
      white-space: nowrap;
}

.cover {
    width: 90rpx;
    height: 90rpx;
    float: left;
    margin-right: 20rpx;
}
.cover>image  {
    display:block;
     width: 90rpx;
    height: 90rpx;
}
.left>view:nth-child(2) {
      display: block;
      float: left;
}

.left .name {
    font-size: 35rpx;
}
.left .price {
    display: block;
    font-size: 35rpx;
    font-weight: 700;
    color: #FE3C46;
    margin-right: 60rpx; 

}
.countController {
     display: flex;
     flex: 1;
     margin: 0rpx 20rpx;
}
.countController>view {
    width: 50rpx;
    box-sizing: border-box;
    padding:  5rpx;

    text-align: center;
    font-weight: 700;
    

}
.countController>text {
    background: #F5F5F5;
    color: #303030;
    min-width: 50rpx;
    line-height: 50rpx;
    text-align: center;
}
/*底部*/
.go_play {
    width: 750rpx;
    height: 100rpx;
    border-top: 1px solid  #D5D5D5;
    position: fixed;
    bottom: 0rpx;

    display: flex;
    justify-content: center;
    align-items: center;
    background: #FFFFFF;
}
.go_play>view {
    width: 65%;
    line-height: 70rpx;
   color: #FFFFFF;
   font-weight: 700;
    text-align: center;
    font-size: 30rpx;
    background: #FE3C46;
    border-radius: 35rpx;
}
.cart_isnull {
    position: fixed;
    left: 0rpx;right: 0rpx;
    top: 0rpx;bottom: 0rpx;
    background: #FFFFFF;

    display: flex;
     justify-content: center;
     align-items: center;
     z-index: 1000;
}
.cart_isnull .hints {
     width: 100%;
     height: 100rpx;
     display: flex;
     justify-content: center;
     align-items: center;
}
.cart_isnull image {
    display: block;
     width: 60rpx;
     height: 60rpx;
}
